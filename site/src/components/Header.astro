import { Icon } from 'astro-icon/components'; // Wait, I don't have astro-icon installed. I should use inline SVGs or install it.
// Checking package.json, I don't see astro-icon. I'll use inline SVGs for simplicity and speed.
---
<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-[color:hsl(var(--bg)/0.9)] border-b border-border transition-all duration-200">
  <div class="mx-auto max-w-[72ch] px-6 h-14 flex items-center justify-between">
    <a href="/" class="font-serif font-medium text-lg tracking-tight hover:text-accent transition-colors">
      David A. Lisk
    </a>

    <nav class="hidden sm:flex items-center gap-6 text-[15px]">
      <a href="/writing" class="text-muted hover:text-fg transition-colors">Writing</a>
      <a href="/projects" class="text-muted hover:text-fg transition-colors">Projects</a>
      <a href="/tags" class="text-muted hover:text-fg transition-colors">Tags</a>
      <a href="/about" class="text-muted hover:text-fg transition-colors">About</a>
    </nav>

      <div class="flex items-center gap-1 pl-6 border-l border-border ml-6">
        <a href="https://github.com/dlisk100" target="_blank" rel="noopener noreferrer" class="text-muted hover:text-fg transition-colors p-1 flex items-center justify-center" aria-label="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
        </a>
        <a href="https://www.linkedin.com/in/liskdavid/" target="_blank" rel="noopener noreferrer" class="text-muted hover:text-fg transition-colors p-1 flex items-center justify-center" aria-label="LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
        </a>
        <button
          id="email-trigger"
          class="text-muted hover:text-fg transition-colors p-1 flex items-center justify-center relative group"
          aria-label="Email"
          title="Click to copy email"
        >
          <div id="email-icon-default" class="transition-opacity duration-200">
             <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          </div>
          <div id="email-icon-success" class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-200 pointer-events-none text-accent">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
          </div>
        </button>
      </div>
  </div>
</header>

<script>
  const email = 'david.lisk@stern.nyu.edu';
  const btn = document.getElementById('email-trigger');
  const defaultIcon = document.getElementById('email-icon-default');
  const successIcon = document.getElementById('email-icon-success');
  
  btn?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(email);
      
      // Toggle icons
      if (defaultIcon && successIcon) {
        defaultIcon.classList.add('opacity-0');
        successIcon.classList.remove('opacity-0');
        
        setTimeout(() => {
          defaultIcon.classList.remove('opacity-0');
          successIcon.classList.add('opacity-0');
        }, 2000);
      }
    } catch (err) {
      console.error('Failed to copy email', err);
    }
  });
</script>
