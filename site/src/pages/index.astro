---
import Layout from '../layouts/Layout.astro';
import LinkCard from '../components/LinkCard.astro';
---

<Layout title="David A. Lisk">
	<section class="mb-16 sm:mb-24">
	<p class="text-lg text-fg leading-relaxed mb-4 max-w-[60ch]">
			MBA Candidate at NYU Stern | Mechanical Engineer
		</p>
		<p class="text-lg text-fg leading-relaxed mb-4 max-w-[60ch]">
			Focused on product strategy and national infrastructure. I explore how software interacts with the physical world, and the business models that make it work.
		</p>
	</section>

	<section>
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
			<LinkCard
				href="/writing"
				title="Writing"
				subtitle="Technology · Product Management · Corporate Strategy"
			/>
			<LinkCard
				href="/projects"
				title="Projects"
				subtitle="Selected works and experiments"
			/>
			<LinkCard
				href="/about"
				title="About"
				subtitle="Background and contact"
			/>
			<LinkCard
				href="/tags"
				title="Tags"
				subtitle="Explore by topic"
			/>
		</div>
	</section>
</Layout>
