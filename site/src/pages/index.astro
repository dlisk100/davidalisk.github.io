---
import Layout from "../layouts/Layout.astro";
import LinkCard from "../components/LinkCard.astro";
---
<Layout title="David Lisk — writing, projects, experiments" description="Calm, fast, and human.">
  <section class="not-prose">
    <h1 class="text-4xl md:text-5xl font-serif tracking-tight m-0 mb-3">David Lisk — writing, projects, and a few living experiments.</h1>
    <p class="mt-3 text-lg text-muted">Calm, fast, and human.</p>

    <div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <LinkCard href="/writing" title="Writing" summary="Essays and longer notes." />
      <LinkCard href="/notes" title="Notes" summary="Short, link-heavy thinking." />
      <LinkCard href="/apps" title="Apps" summary="Urban Core & other tools." />
      <LinkCard href="/about" title="About" summary="Who I am and what I'm doing." />
      <LinkCard href="/now" title="Now" summary="What I'm focused on this month." />
      <LinkCard href="/search" title="Search" summary="Find anything quickly." />
    </div>
  </section>
</Layout>
