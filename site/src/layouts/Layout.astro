---
const { title = "David Lisk", description = "Writing, projects, and a few living experiments." } = Astro.props;
import '../styles/globals.css';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/fonts/fonts.css" />
  </head>
  <body class="antialiased">
    <header class="sticky top-0 z-10 backdrop-blur bg-[color:hsl(var(--bg)/.85)] border-b border-border">
      <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
        <a href="/" class="font-medium tracking-wide hover:text-accent transition-colors">david lisk</a>
        <nav class="text-sm text-muted flex gap-4">
          <a href="/writing" class="hover:text-fg transition-colors">Writing</a>
          <a href="/notes" class="hover:text-fg transition-colors">Notes</a>
          <a href="/apps" class="hover:text-fg transition-colors">Apps</a>
          <a href="/search" class="hover:text-fg transition-colors">Search</a>
          <a href="/about" class="hover:text-fg transition-colors">About</a>
        </nav>
      </div>
    </header>
    <main class="mx-auto max-w-3xl px-4 py-10">
      <slot />
    </main>
    <footer class="mx-auto max-w-6xl px-4 py-10 text-sm text-muted border-t border-border">
      Built in New York. Â© {new Date().getFullYear()} David Lisk
    </footer>
  </body>
</html>
